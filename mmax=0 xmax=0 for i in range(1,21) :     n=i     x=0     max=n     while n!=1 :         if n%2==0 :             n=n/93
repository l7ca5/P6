mmax=0
xmax=0
for i in range(1,21) :
    n=i
    x=0
    max=n
    while n!=1 :
        if n%2==0 :
            n=n/2
            x+=1
        else :
            n=n*3+1
            x+=1
        if n>max :
            max=n
        else :
            max=max
    print(i, x, max)
    if mmax<max :
        mmax=max
    else :
        mmax=mmax
    if xmax<x :
        xmax=x
    else :
        xmax=xmax
print(xmax,mmax)
